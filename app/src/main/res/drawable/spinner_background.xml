<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="@dimen/spinner_stroke" android:color="@color/spinner_stroke_color" />
                    <corners android:radius="@dimen/spinner_corner_radius" />
                </shape>
            </item>

            <item android:right="@dimen/spinner_arrow_right_padding">
                <bitmap
                    android:gravity="right" android:src="@drawable/spinner_arrow" />
            </item>
        </layer-list>
    </item>

</selector>